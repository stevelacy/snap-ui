.action-menu
  position absolute
  top 0
  right 0
  height 42px
  padding 1px
  .button
    display inline-block
    padding 7px 3px 2px 3px
    &:hover
      background rgba(100, 100, 100, .2)
  img, svg
    height 28px
  .menu
    position absolute
    top 44px
    right 10px
    width 200px
    background #efefef
    box-shadow 0 1px 2px #555
    li
      overflow hidden
      list-style none
      padding 15px
      height 40px
      border-bottom 1px solid #dfdfdf
      &:hover
        background rgba(100, 100, 100, .2)
