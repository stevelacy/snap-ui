@import "./colors"

.button
  border none
  padding 10px
  background grey-light
  color black
  box-shadow 0 1px 2px #888
  margin 5px
  outline none
  &:hover
    background darken(grey-light, 10)
  &.action
    z-index 5
    width 50px
    height 50px
    color white
    font-weight bold
    text-align center
    border-radius 25px
    padding-top 15px
    background red
    &:hover
      background darken(red, 10)
    svg, img
      height 28px
      margin-top -3px
      fill white
  &.green
    background green
    color white
    &:hover
      background darken(green, 10)
  &.red
    background red
    color white
    &:hover
      background darken(red, 10)
  &.blue
    background blue
    color white
    &:hover
      background darken(blue, 10)


.button-reset
  display inline-block
  padding 7px 3px 2px 3px
  margin 0
  background none
  box-shadow none

.action-menu
  .button
    @extend .button-reset
    &:hover
      background rgba(100, 100, 100, .2)


.footer-menu
  .button
    @extend .button-reset
    height 40px
    &:hover
      background rgba(100, 100, 100, .2)
    svg
      height 28px
    .svg-sync
      .arrows
        fill teal
      .path
        fill black
