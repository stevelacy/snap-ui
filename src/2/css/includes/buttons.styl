.button
  border none
  padding 10px
  background #dedede
  color #000
  box-shadow 0 1px 2px #888
  margin 5px
  &.action
    z-index 5
    width 50px
    height 50px
    color #fff
    font-weight bold
    text-align center
    border-radius 25px
    padding-top 15px
    background red
    svg, img
      height 28px
      margin-top -3px
      fill white
  &.green
    background green
    color #fff
  &.red
    background red
    color #fff
  &.blue
    background blue
    color #fff


.button-reset
  display inline-block
  padding 7px 3px 2px 3px
  margin 0
  background none
  box-shadow none

.action-menu
  .button
    @extend .button-reset
    &:hover
      background rgba(100, 100, 100, .2)


.footer-menu
  .button
    @extend .button-reset
    height 40px
    &:hover
      background rgba(100, 100, 100, .2)
    svg
      height 28px
    .svg-sync
      .arrows
        fill teal
      .path
        fill #000
