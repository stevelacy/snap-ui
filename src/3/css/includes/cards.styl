.cards
  .card
    position relative
    width 80%
    min-height 200px
    margin 10px
    margin-left 10%
    background white-light-shade
    box-shadow 0 1px 3px grey-shade
    border-radius 2px
    padding 10px
    .title
      width 100%
      height 20px
      font-size 25px
      font-weight bold
    .menu
      position absolute
      top 10px
      right 10px
    svg, img
      max-width 100%
