doctype html
html
  head
    title nav drawer - 3
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" type="text/css" href="css/vendor/snap.css")
    link(rel="stylesheet" type="text/css" href="css/style.css")
    script(src="js/snap.js")
    script(src="js/jquery.js")
    script(src="js/swipe.js")
    script(src="js/main.js")
  body
    #main.snap-content
      .spacer-46
      #content
        .view
          .tabs
            .tab.active
              .icon
                include ./svg/prev
              .html
                | Tab content 1
                br
                | some more content

            .tab
              .icon
                include ./svg/user
              .html
                | Tab content 2
                br
                | some more content

            .tab
              .icon
                include ./svg/next
              .html
                | Tab content 3
                br
                | some more content

          .content this content is overridden by the tabs



        .view
          .content
            h1 drawer three
            h3 with menu
            h3 action bar is fixed, realistic

            button.button.inline Button
            .button.action.inline test
            .button.action.green
              include ./svg/sync
            .spacer
            h3 Inputs
            input(type="text" placeholder="Enter text here")
            input(type="text" value="TextBox")
            input(type="number" value="1234")
            textarea This is some text in a textarea
        .view
          .content
            .cards
              .card
                .title Title of card
                .menu
                .content This is the content
              .card
                .title Title of card two
                .menu
                .content Slide Left to remove :)
                  include ./svg/prev


    .snap-drawers
      .snap-drawer
        .snap-drawer-left
          .spacer
          .main
            .user
              .icon
                img(src="images/profile.jpg")
            li.circle first
            li.circle second
            .line
          .footer
            .footer-menu
              .button
                include ./svg/sync
    .action-bar
      .snap-button
        include ./svg/menu
      .title circle
      .action-menu
        .button
          include ./svg/sync
        .button.menu-button
          include ./svg/menu2
        .menu
          li Settings
          li Choice 2
